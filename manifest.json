{
	"manifest_version": 3,
	"name": "Shopify Theme Info Checker",
	"version": "1.0",
	"description": "Checks if window.Shopify.theme exists on the current page",
	"permissions": [
		"activeTab",
		"scripting"
	],
	"host_permissions": [
		"<all_urls>"
	],
	"action": {
		"default_popup": "popup.html",
        "default_icon": {
            "128": "images/icon-128.png"
        }
	}
}